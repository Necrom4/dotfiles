# WSL-specific interactive shell configuration

# Set Neovide as EDITOR if available
if command -v neovide.exe >/dev/null 2>&1; then
  export EDITOR="neovide.exe"
fi

# Source all scripts for this OS
scripts_dir="${0:A:h}/WSL.d"

for script in "$scripts_dir"/*.sh; do
    if [[ -r "$script" ]]; then
        source "$script"
    fi
done
