[user]
	name = Diogo Pombeiro
[commit]
	verbose = true
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[diff]
  tool = nvimdiff
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
  algorithm = histogram
[color "diff"]
  context = "#636DA6"
  commit = "#3BA08E"
  newMoved = "#FFC777"
  oldMoved = "#FF966C"
  frag = "#1ABC9C"
  meta = "#C8D3F5"
  new = "#C3E88D"
  old = "#E26A75"
[column]
  ui = auto
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
  navigate = true
  line-numbers = true
  syntax-theme = "Dracula"
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  whitespace-error-style = "red reverse"
  file-style = "omit"
  hunk-header-style = "file line-number syntax"
  hunk-header-decoration-style = "blue box"
  hunk-header-line-number-style = "orange"
  features = side-by-side
[delta "side-by-side"]
  side-by-side = true
[merge]
	conflictStyle = zdiff3
